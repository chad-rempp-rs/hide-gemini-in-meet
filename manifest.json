{
  "manifest_version": 3,
  "name": "Hide Gemini in Google Meet",
  "version": "1.1",
  "description": "Hides the Gemini icons in Google Meet (with toggle).",
  "permissions": ["scripting", "storage"],
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html"
}